package Communication;

import java.io.Serializable;

import game.Command;

/**
 * 用于通讯的类
 * @author svitter
 *
 */
public class SendInfor  implements Serializable {
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	/**	 通讯命令*/
	public Command command;
	/** 命令发出者*/
	public int uid;
	/** 命令发出者*/
	public String name;
	/** 命令承担者*/
	public String objName;
	/** 命令承担者id*/
	public int objId;
	/** 
	public int objNum;
	public int objPos;
	public String information;

	/**
	 *  空初始化
	 */
	public SendInfor() {
		// TODO Auto-generated constructor stub
	}
	
	/**
	 *  包含信息, 发送者id的初始化
	 * @param command
	 * @param name
	 * @param userid
	 * @param information
	 */
	public SendInfor(Command command, String name, int userid, String information){
		this.command = command;
		this.name = name;
		this.uid = userid;
		this.information = information;
	}

	/**
	 *  包含对象名， 发送者id的初始化
	 * @param command
	 * @param objName
	 * @param userid
	 */
	public SendInfor(Command command, String objName, int userid) {
		this.command = command;
		this.objName = objName;
	}

	/**
	 *  包含对象名，发送者id，被作用者id的初始化
	 * @param command
	 * @param objName
	 * @param userid
	 * @param objid
	 */
	public SendInfor(Command command, String objName, int userid, int objid) {
		this.command = command;
		this.objName = objName;
		this.objId = objid;
	}

	/**
	 *  包含对象名， 发送者id, 信息，被作用者对象id的初始化
	 * @param command
	 * @param objName
	 * @param userid
	 * @param information
	 * @param objid
	 */
	public SendInfor(Command command, String objName, int userid,
			String information, int objid) {
		this.command = command;
		this.objName = objName;
		this.objId = objid;
		this.information = information;
	}

	/**
	 *  包含对象名，对象id，发送者id，信息，以及单位值的初始化
	 * @param command
	 * @param objName
	 * @param userid
	 * @param information
	 * @param objid
	 * @param objNumue
	 */
	public SendInfor(Command command, String objName, int userid,
			String information, int objid, int objNumue) {
		this.command = command;
		this.objName = objName;
		this.objId = objid;
		this.information = information;
		this.objNum = objNumue;
	}

	/**
	 *  包含位置的初始化
	 * @param command
	 * @param objName
	 * @param userid
	 * @param information
	 * @param objid
	 * @param objNumue
	 * @param objPos
	 */
	public SendInfor(Command command, String objName, int userid,
			String information, int objid, int objNum, int objPos) {
		this.command = command;
		this.objName = objName;
		this.objId = objid;
		this.information = information;
		this.objNum = objNum;
		this.objPos = objPos;
	}
	
	public SendInfor attack(int objId, int num ,int val) {
		this.command = Command.ATTACK;
		this.objId = objId;
		
		return this;
	}
}

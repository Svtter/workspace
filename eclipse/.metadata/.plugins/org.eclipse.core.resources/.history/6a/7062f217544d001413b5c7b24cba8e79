package game;

/**
 * 通讯命令
 * @author svitter
 *
 */
public enum Command {
	/**退出游戏 */
	EXIT,	 

	/**初始化 */
	INIT,		 

	/**开始 */
	START,		

	/** 显示*/
	SHOW,
	
	/** 攻击*/
	ATTACK,	

/** 跳过回合*/
	PASS, 		
	
	/**新牌*/
	NEW,	

	ADD, 		//添加

	HELP, 		//帮助

	HACK, 		//HACK功能

	TURN,		//回合标识

	WAIT,		//等待标识

	LOSE, 		//游戏失败，或者观战模式
}

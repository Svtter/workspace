package ui;

import Communication.SendInfor;
import game.Command;

public class FrontInfor extends Menu {

	public static SendInfor attack() {
		System.out.println("Attack --------------");
		System.out.println("输入要攻击的对象(uid):");
		si.objId = in.nextInt();
		System.out.println("输入要猜的排的位置：");
		si.objPos = in.nextInt();
		System.out.println("输入猜测的值:");
		si.objVal = in.nextInt();

		return si;
	}

	/**
	 * 猜测情况
	 * @param 猜测是否成功
	 */
	public static void attackSuccess(boolean successOrnot) {
		// TODO Auto-generated method stub
		if (si)
			cout("Attack success!");
		else
			cout("Attack failure!");
	}

	/**
	 * 结束回合
	 * 
	 * @param si
	 */
	public static void exitTurn(SendInfor si) {
		cout(si.name + "turn compelete.");
	}

	/**
	 * 显示pass...
	 */
	public static void pass() {
		cout("pass...");
	}

	/**
	 * 输入命令
	 * 
	 * @param turn
	 * @return
	 */
	public static SendInfor chooseCommand(Command turn) {
		// TODO Auto-generated method stub
		if (turn == Command.TURN) {
			System.out.println("输入您的命令：");
			String str;
			str = in.next();
			switch (str) {
			case "attack":
				si.command = Command.ATTACK;
				break;
			case "help":
				si.command = Command.HELP;
				break;
			case "pass":
				si.command = Command.PASS;
				break;
			case "show":
				si.command = Command.SHOW;
				break;
			default:
				System.out.println("Error Input. Not handle.");
				//
				break;
			}
		} else if (turn == Command.WAIT) {
			System.out.println("Waiting...");
		} else if (turn == Command.LOSE) {

		} else {

		}
		return null;
	}

	/**
	 * 轮到谁的会和
	 * 
	 * @param turn
	 * @param yourTurn
	 */
	public static void whosTurn(int turn, int yourTurn) {
		if (turn == yourTurn)
			System.out.println("Your turn !!");
		else
			System.out.println("Waiting...");
	}

	/**
	 * 谁先进行游戏
	 * 
	 * @return 游戏编号
	 */
	public static int whosFirst() {
		cout("who's the first?");
		int temp = in.nextInt();
		return temp;
	}

	/**
	 * 确定
	 * 
	 * @return
	 */
	public static boolean confirm() {
		cout("yes/no?(y/n)");
		String temp;
		temp = in.next();
		if (temp.equals("y")) {
			return true;
		} else {
			return false;
		}
	}
}
